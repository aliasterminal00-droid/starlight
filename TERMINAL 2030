            justify-content: center; 
            height: 100vh; 
            margin: 0;
            text-shadow: 0 0 5px #00FF41;
        }

        #auth-screen { 
            text-align: center; 
            border: 1px solid #00FF41; 
            padding: 50px; 
            background: rgba(0, 20, 0, 0.2);
            box-shadow: 0 0 20px #004411;
        }
        
        input { 
            background: #000; 
            border: 1px solid #00FF41; 
            color: #00FF41; 
            padding: 10px; 
            text-align: center; 
            font-size: 1.5rem;
            width: 150px;
            margin-top: 20px;
            outline: none;
        }

        #main-terminal { display: none; text-align: center; }

        /* El Radar de Voz */
        .radar-circle {
            width: 200px;
            height: 200px;
            border-radius: 50%;
            border: 2px solid #00FF41;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            position: relative;
            background: radial-gradient(circle, #001100, #000);
            box-shadow: 0 0 15px #00FF41;
        }

        .radar-circle:active { transform: scale(0.95); box-shadow: 0 0 40px #00FF41; }

        .status-msg {
            margin-top: 40px;

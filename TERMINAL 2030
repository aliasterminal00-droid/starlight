<body>

    <div id="auth-screen">
        <div style="font-size: 0.6rem; opacity: 0.5;">NVVEX SYSTEM ACCESS</div>
        <p>INTRODUZCA PIN</p>
        <input type="password" id="pass" oninput="checkPass()" maxlength="4">
    </div>

    <div id="main-terminal">
        <div class="radar-circle" id="start-btn">
            <span style="font-size: 0.7rem;">VOZ</span>
        </div>
        <div class="status-msg" id="status-text">ESPERANDO ORDEN...</div>
    </div>

    <script>
        // TU CLAVE DE ACCESO
        const CLAVE = "1234"; 

        function checkPass() {
            const val = document.getElementById('pass').value;
            if (val === CLAVE) {
                document.getElementById('auth-screen').style.display = 'none';
                document.getElementById('main-terminal').style.display = 'block';
            }
        }

        // Sistema de Reconocimiento
        const btn = document.getElementById('start-btn');
        const statusText = document.getElementById('status-text');

        if ('webkitSpeechRecognition' in window) {
            const recognition = new webkitSpeechRecognition();
            recognition.lang = 'es-ES';

            btn.onclick = () => {
                recognition.start();
                statusText.innerText = "ESCUCHANDO...";
                btn.style.boxShadow = "0 0 60px #fff";
            };

            recognition.onresult = (event) => {
                const query = event.results[0][0].transcript;
                statusText.innerText = "PROCESANDO: " + query.toUpperCase();
                setTimeout(() => {
                    statusText.innerText = "SISTEMA LISTO";
                    btn.style.boxShadow = "0 0 15px #00FF41";
                }, 3000);
            };
        } else {
            statusText.innerText = "ERROR: NAVEGADOR NO COMPATIBLE";
        }
    </script>
</body>

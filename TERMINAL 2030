    <style>
        body { 
            background: #0a0a0a; 
            color: #ffffff; 
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; 
            display: flex; 
            flex-direction: column; 
            align-items: center; 
            justify-content: center; 
            height: 100vh; 
            margin: 0; 
        }
        
        #content { 
            display: none; 
            text-align: center; 
        }

        .voice-btn {
            width: 140px;
            height: 140px;
            background: #ffffff;
            border-radius: 50%;
            border: none;
            cursor: pointer;
            box-shadow: 0 0 30px rgba(255,255,255,0.1);
            transition: transform 0.2s;
        }

        .voice-btn:active { 
            transform: scale(0.9); 
            background: #dddddd;
        }

        #status {
            margin-top: 40px;
            font-size: 1rem;
            letter-spacing: 2px;
            color: #888;
            text-transform: uppercase;

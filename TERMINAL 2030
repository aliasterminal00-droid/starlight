<body>

    <div id="content">
        <button class="voice-btn" id="mic-btn"></button>
        <div id="status" id="display-text">SISTEMA DE VOZ LISTO</div>
    </div>

    <script>
        // ==========================================
        // CONFIGURACIÓN DE SOCIO
        // ==========================================
        const PIN_ACCESO = "NVV04X"; // <--- CAMBIA TUS 4 NÚMEROS AQUÍ

        // Bloqueo inmediato
        const login = prompt("ACCESO RESTRINGIDO - INGRESE PIN:");

        if (login === PIN_ACCESO) {
            document.getElementById('content').style.display = 'block';
        } else {
            alert("PIN INCORRECTO");
            document.body.innerHTML = "<div style='color:red; font-size:12px;'>TERMINAL BLOQUEADA</div>";
        }

        // Lógica de Voz
        const btn = document.getElementById('mic-btn');
        const statusText = document.getElementById('status');

        if ('webkitSpeechRecognition' in window) {
            const recognition = new webkitSpeechRecognition();
            recognition.lang = 'es-ES';
            recognition.continuous = false;

            btn.onclick = () => {
                recognition.start();
                statusText.innerText = "ESCUCHANDO...";
                btn.style.boxShadow = "0 0 50px rgba(255,255,255,0.5)";
            };

            recognition.onresult = (event) => {
                const transcript = event.results[0][0].transcript;
                statusText.innerText = "CAPTADO: " + transcript.toUpperCase();
                
                // Aquí es donde vincularemos tu API más adelante
                console.log("Comando enviado:", transcript);

                setTimeout(() => {
                    statusText.innerText = "SISTEMA DE VOZ LISTO";
                    btn.style.boxShadow = "0 0 30px rgba(255,255,255,0.1)";
                }, 3000);
            };

            recognition.onerror = () => {
                statusText.innerText = "ERROR DE MICROFONO";
            };
        } else {
            statusText.innerText = "NAVEGADOR NO COMPATIBLE";
        }
    </script>
</body>
</html>
